<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/box1"
        android:layout_width="25dp"
        android:layout_height="55dp"
        android:background="@color/grey"
        android:gravity="center"
        android:onClick="onBoxClick"
        android:text="1"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/box2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box2"
        android:layout_width="25dp"
        android:layout_height="55dp"
        android:background="@color/grey"
        android:gravity="center"
        android:onClick="onBoxClick"
        android:text="2"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/box3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box3"
        android:layout_width="25dp"
        android:layout_height="55dp"
        android:background="@color/grey"
        android:gravity="center"
        android:onClick="onBoxClick"
        android:text="3"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/box4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box4"
        android:layout_width="25dp"
        android:layout_height="55dp"
        android:background="@color/grey"
        android:gravity="center"
        android:onClick="onBoxClick"
        android:text="4"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/box5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box5"
        android:layout_width="25dp"
        android:layout_height="55dp"
        android:background="@color/grey"
        android:gravity="center"
        android:onClick="onBoxClick"
        android:text="5"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/box6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box6"
        android:layout_width="25dp"
        android:layout_height="55dp"
        android:background="@color/grey"
        android:gravity="center"
        android:onClick="onBoxClick"
        android:text="6"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/box7"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box7"
        android:layout_width="25dp"
        android:layout_height="55dp"
        android:background="@color/grey"
        android:gravity="center"
        android:onClick="onBoxClick"
        android:text="7"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/box8"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box8"
        android:layout_width="25dp"
        android:layout_height="55dp"
        android:background="@color/grey"
        android:gravity="center"
        android:onClick="onBoxClick"
        android:text="8"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/buttonSendback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895" />

</androidx.constraintlayout.widget.ConstraintLayout>
